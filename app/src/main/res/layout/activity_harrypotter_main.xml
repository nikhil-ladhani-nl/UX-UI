<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    tools:context=".harrypotter_main"
    android:orientation="vertical"
    android:background="@drawable/smoke"
    android:backgroundTint="@color/colorAccent">

 <ImageView
                android:id="@+id/main_logo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/logo"
                android:layout_weight="20" />

<android.support.v7.widget.CardView
    android:id="@+id/gryffindor_cardView"
    android:layout_width="match_parent"
     android:layout_height="0dp"
     android:elevation="5dp"
    android:layout_marginBottom="5dp"
    android:layout_weight="20"
    app:cardBackgroundColor="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <ImageView
                android:id="@+id/gryffindor_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:background="@drawable/gryffindor"

                />
            <TextView
                style="@style/HP_HomeText"
                android:id="@+id/gryffindor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toEndOf="@id/gryffindor_button"
                android:layout_centerVertical="true"
                android:text="Gryffindor House"
                android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:id="@+id/slytherin_cardView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="5dp"
    android:layout_weight="20"
    app:cardBackgroundColor="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
            <ImageView
                android:id="@+id/slytherin_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:background="@drawable/slytherin"
                android:layout_alignParentEnd="true"/>
        <TextView
            style="@style/HP_HomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toStartOf="@id/slytherin_button"
            android:layout_centerVertical="true"
            android:text="Slytherin House"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:id="@+id/hufflepuff_cardView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="5dp"
    android:layout_weight="20"
    app:cardBackgroundColor="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hufflepuff_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:background="@drawable/hufflepuff"/>
            <TextView
                style="@style/HP_HomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toEndOf="@id/hufflepuff_button"
                android:layout_centerVertical="true"
                android:text="Hufflepuff House"
                android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:id="@+id/ravenclaw_cardView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="5dp"
    android:layout_weight="20"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
            <ImageView
                android:id="@+id/ravenclaw_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:background="@drawable/ravenclaw"
                android:layout_alignParentEnd="true"/>
        <TextView
            style="@style/HP_HomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toStartOf="@id/ravenclaw_button"
            android:layout_centerVertical="true"
            android:text="Ravenclaw House"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
